extends layout

block content
  h1 Please log in
  form(method='POST' action='/log-in')
    div.form-group
      //- label(for='email') E-mail:
      //- input#email.form-control(type='email' name='email' required='true')

      label(for='username') E-mail:
      input#email.form-control(type='email' name='username' required='true')
      label(for='password') Password:
      input#password.form-control(type='password' name='password' required='true')
    button.btn.btn-primary(type='submit') Submit
  
  if errors
    ul
      for error in errors
        li!= error.msg